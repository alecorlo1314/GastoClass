<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="GastoClass.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GastoClass">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  ESTILO PARA EL BORDER DE LOS ITEMS DEL MENU LATERAL  -->
            <Style
                ApplyToDerivedTypes="True"
                Class="FlyoutItemLayoutStyle"
                TargetType="Border">
                <Setter Property="Stroke" Value="Transparent" />
                <Setter Property="StrokeShape" Value="RoundRectangle 15" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>
            <!--  ESTILO PARA EL LABEL DE LOS ITEMS DEL MENU LATERAL  -->
            <Style
                ApplyToDerivedTypes="True"
                Class="FlyoutItemLabelStyle"
                TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Gray600}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
