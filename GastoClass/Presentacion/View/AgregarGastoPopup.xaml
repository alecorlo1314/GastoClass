<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="GastoClass.Presentacion.View.AgregarGastoPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Border
        BackgroundColor="{StaticResource FondoBlanco}"
        HeightRequest="600"
        Stroke="Transparent"
        WidthRequest="500">

        <Grid RowDefinitions="Auto,*,Auto">

            <!--  ENCABEZADO  -->
            <Grid
                Grid.Row="0"
                Padding="24,16"
                BackgroundColor="{StaticResource FondoBlanco}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <VerticalStackLayout Grid.Column="0">
                    <Label
                        FontFamily="PoppinsSemiBold"
                        FontSize="24"
                        Text="Agregar Gasto"
                        TextColor="{StaticResource Gray950}"
                        VerticalOptions="Center" />
                    <Label
                        FontFamily="PoppinsRegular"
                        FontSize="14"
                        Text="Agrega un nuevo gasto a tus registros. La categoría se predirá automáticamente."
                        TextColor="{StaticResource Gray500}"
                        VerticalOptions="Center" />
                </VerticalStackLayout>

                <ImageButton
                    Grid.Column="1"
                    BackgroundColor="Transparent"
                    Clicked="OnCerrarClicked"
                    HeightRequest="24"
                    Source="cancel_01.png"
                    WidthRequest="24" />
            </Grid>

            <!--  FORMULARIO  -->
            <ScrollView Grid.Row="1" Padding="24">
                <VerticalStackLayout Spacing="16">

                    <!--  MONTO  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsMedium"
                            FontSize="14"
                            Text="Monto"
                            TextColor="#333" />
                        <Border
                            BackgroundColor="{StaticResource FondoMenosBlanco}"
                            Stroke="{StaticResource ColorStrokeFomulariosEntrada}"
                            StrokeShape="RoundRectangle 4">
                            <Entry
                                x:Name="EntryMonto"
                                FontFamily="PoppinsRegular"
                                FontSize="16"
                                Keyboard="Numeric"
                                Placeholder="$0.00"
                                Text="{Binding Monto}"
                                TextColor="{StaticResource Gray950}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  DESCRIPCION  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsMedium"
                            FontSize="14"
                            Text="Descripción"
                            TextColor="#333" />
                        <Border
                            BackgroundColor="{StaticResource FondoMenosBlanco}"
                            Stroke="{StaticResource ColorStrokeFomulariosEntrada}"
                            StrokeShape="RoundRectangle 4">
                            <Entry
                                x:Name="EntryDescripcion"
                                FontFamily="PoppinsRegular"
                                FontSize="16"
                                Placeholder="Ej: Almuerzo en restaurante"
                                Text="{Binding Descripcion}"
                                TextColor="{StaticResource Gray950}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Categoría  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsMedium"
                            FontSize="14"
                            Text="Categoría"
                            TextColor="#333" />
                        <Border
                            BackgroundColor="{StaticResource FondoMenosBlanco}"
                            Stroke="{StaticResource ColorStrokeFomulariosEntrada}"
                            StrokeShape="RoundRectangle 4">
                            <Picker
                                x:Name="PickerCategoria"
                                Title="Selecciona una categoría"
                                Margin="8,0"
                                FontFamily="PoppinsRegular" SelectedItem="{Binding Categoria}"
                                FontSize="16"
                                HeightRequest="45"
                                TextColor="{x:StaticResource Gray950}"
                                TitleColor="{x:StaticResource Gray500}">
                                <Picker.Items>
                                    <x:String>Alimentación</x:String>
                                    <x:String>Transporte</x:String>
                                    <x:String>Entretenimiento</x:String>
                                    <x:String>Salud</x:String>
                                    <x:String>Otros</x:String>
                                </Picker.Items>
                            </Picker>
                        </Border>
                    </VerticalStackLayout>

                    <!--  Fecha  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsMedium"
                            FontSize="14"
                            Text="Fecha"
                            TextColor="#333" />
                        <Border
                            BackgroundColor="{StaticResource FondoMenosBlanco}"
                            Stroke="{StaticResource ColorStrokeFomulariosEntrada}"
                            StrokeShape="RoundRectangle 4">
                            <DatePicker
                                x:Name="DatePickerFecha"
                                Margin="8,0"
                                Date="{Binding Fecha}"
                                FontFamily="PoppinsRegular"
                                FontSize="16"
                                Format="dd/MM/yyyy"
                                TextColor="{StaticResource Gray950}" />
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <!--  GRUPO DE BOTONES  -->
            <Grid
                Grid.Row="2"
                Padding="24,16"
                BackgroundColor="{StaticResource FondoBlanco}"
                ColumnDefinitions="*,*"
                ColumnSpacing="16">

                <Button
                    Grid.Column="0"
                    BackgroundColor="{StaticResource FondoMenosBlanco}"
                    BorderWidth="1"
                    Clicked="OnCancelarClicked"
                    CornerRadius="8"
                    FontFamily="PoppinsSemiBold"
                    FontSize="16"
                    HeightRequest="48"
                    Text="Cancelar"
                    TextColor="#666" />

                <Button
                    Grid.Column="1"
                    BackgroundColor="#4880FF"
                    Clicked="OnGuardarClicked"
                    Command="{Binding GuardarGastoCommand}"
                    CornerRadius="8"
                    FontFamily="PoppinsSemiBold"
                    FontSize="16"
                    HeightRequest="48"
                    Text="Guardar"
                    TextColor="White" />
            </Grid>

        </Grid>
    </Border>
</toolkit:Popup>